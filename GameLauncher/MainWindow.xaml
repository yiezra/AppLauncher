<Window x:Class="AppLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="Launcher" Height="558" Width="1050">
    <Grid>
        <Image Stretch="UniformToFill" Source="images/shbackground.png"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0, 0, 5, 0"/>
        <ProgressBar Minimum="0" Maximum="100" Name="pbStatus" Height="38" VerticalAlignment="Top" Margin="363,308,365,0" />
        <Label x:Name="PlayStatus" Content="업데이트 체크" Height="30" FontSize="14" FontWeight="Bold"  Foreground="#FF666666" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,111">
        </Label>
        <Button Name="PlayButton" Content="Checking For Updates" Click="PlayButton_Click" Height="30" FontSize="14" FontWeight="Bold" Foreground="#DD999999" Margin="0,434,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="150" Background="#00FF9700" Padding="10,0,10,0">
            <!--Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="0"/>
                    <Setter Property="Padding" Value="10,2,10,3"/>
                    <Setter Property="Background" Value="White"/>
                </Style>
            </Button.Resources-->
        </Button>
    </Grid>
</Window>
